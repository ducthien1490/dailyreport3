<% provide(:title, 'Sign up') %> 
<h1>Sign up</h1>

<div class="row">
	<div class="span6 offset5">

		<%= form_for(@user) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>

			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :email %>
			<%= f.text_field :email %>

			<%=f.label :password%>
			<%= f.password_field :password%>

			<%=f.label :password_confirmation%>
			<%= f.password_field :password_confirmation %>
            <%=f.hidden_field :md5_id,:value => Digest::MD5.hexdigest(SecureRandom.hex(10)) %>
			<%= f.submit "Create account", class: "btn btn-medium btn-primary" %>
		<% end %>
	</div>

</div>
