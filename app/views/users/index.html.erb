<% provide(:title, 'All users') %>
<h2> List Users </h2>

<div class ='center'>
<%= render 'shared/menu' %>
<div class='offset4'>
<table class='table table-striped' >
	<thead>
	<tr>
		<th>Status</th>
		<th>Name</th>
		<th>Email</th>
		<th></th>
		<th></th>
	</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
			<tr>
				<td><%if user.group_id !=0 %>
					<span class="label label-success"><%=Group.find_by(id:user.group_id).name%></span>
                    
					<% else %>
					<span class="label label-important">Deactive</span>
					<% end %>
				</td>
				<td><%= user.name %> &nbsp
					<%if user.manager_group? %>
						<span class= 'img' title='Manager Group'>
							<%= image_tag("manager.png", :alt => "rss feed") %>
						</span>
					<%end%>
				</td>
				<td><%= user.email %></td>
				<% if user.admin? %>
					<td></td>
					<td></td>
				<% else %>
					<td><%= link_to 'Edit',edit_user_path(user) %></td>
					<td><%= link_to 'Delete',user, method: :delete, data: {confirm: "Are you really want to delete this user?"} %></td>
				<%end%>
			</tr>								
		<% end %>
	</tbody>
</table>
<%= will_paginate %>
</div>
<!--end div user-->
</div> <!--End div center-->


