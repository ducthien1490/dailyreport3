<%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>


      <%= f.label :manager_group %>
      <%= f.select :manager_group,([['Yes', 't'], ['No', 'f']]) %>
      

      <%= f.label :group_id %>
      <%=f.select :group_id,Group.all.collect {|g| [ g.name, g.id ] }%>
   <%= f.submit "Save changes", class: "btn btn-medium btn-primary" %>
   <% end %>